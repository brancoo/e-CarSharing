@model e_CarSharing.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
    <div class="col-lg-8 mx-auto" style="padding: 150px;width: 100%;margin: auto;">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Join us</h2>
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "E-mail" })
                </div>
            </div>

            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                </div>
            </div>

            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm Password" })
                </div>
            </div>

            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group">
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group">
                    @Html.EditorFor(model => model.BankAccountNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "Bank Account Number" } })
                    @Html.ValidationMessageFor(model => model.BankAccountNumber, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group">
                    @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Bank Name" } })
                    @Html.ValidationMessageFor(model => model.BankName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group" style="padding: 5px 0px 0px 0px">
                    @Html.DropDownListFor(m => m.Role, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
                </div>
            </div>

            <div id="Identifier" class="form-group floating-label-form-group controls mb-0 pb-2">
                <div class="form-group" style="padding: 5px 0px 0px 0px">
                    @Html.EnumDropDownListFor(m => m.Identification, new { @class = "form-control", @placeholder = "Owner Type" })
                </div>
            </div>

            <div class="form-group" style="padding: 5px 0px 0px 0px">
                <div class="form-group">
                    <input type="submit" class="btn btn-primary btn-xl" value="Register" style="margin-left: 40%;" />
                </div>
            </div>
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script type="text/javascript">
            $(document).ready(function () {
                $('#Role').change(function () {
                    var ddlValue = $(this).val();

                    if (ddlValue == "Owner") {
                        $('#Identifier').show();
                    }
                    else
                        $('#Identifier').hide();
                });
            });
        </script>
    }
