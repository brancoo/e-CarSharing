@model e_CarSharing.Models.Rental

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top: 15%">
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Rent a car!</h2>
    <div class="divider-custom">
        <div class="divider-custom-line"></div>
        <div class="divider-custom-icon">
            <i class="fas fa-star"></i>
        </div>
        <div class="divider-custom-line"></div>
    </div>

    @using (Html.BeginForm("Create","Rentals"))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal" align="center">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.VehicleId, "Vehicle Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownList("VehicleId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.VehicleId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.VehicleType, "Vehicle Type", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.EnumDropDownListFor(model => model.VehicleType, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.VehicleType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.VehicleStationId, "Vehicle Station", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownList("VehicleStationId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.VehicleStationId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DeliveryVehicleStationId, "Delivery Vehicle Station", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.DropDownList("DeliveryVehicleStationId", new SelectList(ViewBag.DeliveryVehicleStationId, "VehicleStationId", "Name"), htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DeliveryVehicleStationId, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.DeliveryExpectedDate, "Vehicle's Delivery Date", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            <input class="datepicker" name="DeliveryExpectedDate" type="text" id="fromDate" />
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true,
                todayBtn: 'linked',
                clearBtn: true,
                todayHighlight: true,
                startDate: "today",
            })
        });
    </script>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Rent this car" class="btn btn-primary btn-lg" />
        </div>
    </div>
</div>
    }
</div>
<div style="position: relative;margin-left: 47.2%;margin-bottom: 1%">
    <input type="submit" onclick="location.href='@Url.Action("Index", "Rentals")'" value="Return" class="btn btn-primary btn" />
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
